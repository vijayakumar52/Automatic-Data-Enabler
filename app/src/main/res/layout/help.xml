<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="fill_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic Nofication Synchronization"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvvhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    It is an Automatic Data Enabling Application which is used to enable the data automatically whenever the selected Applications are opened. \n \n  Internet will be enabled while opening the applications and disabled after closing the application.   "/>
</LinearLayout>
</ScrollView>
</LinearLayout>
